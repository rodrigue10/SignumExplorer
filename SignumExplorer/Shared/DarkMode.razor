<MudThemeProvider Theme="currentTheme" />

<MudTooltip Text="Toggle light/dark theme">
    <MudIconButton Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit" OnClick="@((e) => DarkModeChange())" />
</MudTooltip>

@code{

    MudTheme currentTheme = new MudTheme();
    MudTheme mudDefault = new MudTheme();

    protected override void OnInitialized()
    {
        OverrideDefaultTheme(mudDefault);
        OverrideDefaultFonts(darkTheme);
        currentTheme = mudDefault;

    }

    void DarkModeChange()
    {


        if (currentTheme == mudDefault)
        {
            currentTheme = darkTheme;
        }
        else
        {
            currentTheme = mudDefault;
        }
    }

    void OverrideDefaultFonts(MudTheme theme)
    {
        //Typography setup 
        theme.Typography.Body1.FontFamily = new[] { "Montserrat", "Helvetica", "Arial", "sans-serif" };
        theme.Typography.Body2.FontFamily = new[] { "Montserrat", "Helvetica", "Arial", "sans-serif" };
